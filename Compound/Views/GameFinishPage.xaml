<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Compound.GameFinishPage">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" Padding="20">
		<StackLayout HorizontalOptions="CenterAndExpand" Padding="20" >
		<Label x:Name="wordRunout" XAlign="Center" YAlign="Center"></Label>
				<Label x:Name="Score" XAlign="Center" YAlign="Center"></Label>
			<Entry Placeholder="Please input your name : " x:Name="playerName" Margin="10"></Entry>
			<Button Text="Submit" Clicked="GotoHighScore" BackgroundColor="Blue" TextColor="White"  WidthRequest = "150" HeightRequest = "40" Margin="10"></Button>
				<Button Text="Skip" Clicked="GoHome" BackgroundColor="Blue" TextColor="White"  WidthRequest = "150" HeightRequest = "40"></Button>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
